import QtQuick
import QtQuick.Layouts
import QtQuick.Controls
import QtQuick.Window

Window {
    id: mainWindow

    color: "white"
    flags: Qt.WindowStaysOnTopHint | Qt.FramelessWindowHint
    height: 650
    width: 1050
    visible: true

    Rectangle {
        id: splash
        width: parent.width
        height: parent.height
        color: "transparent"

        opacity: 1
        Behavior on opacity {
            OpacityAnimator {
                duration: 2000 // Duration of fade-out effect
                from: 1
                to: 0
            }
        }


        Text {
            anchors.centerIn: parent
            text: "Logo PlaceHolder"
            font.pixelSize: 40
            color: "black"
        }
    }


    Timer {
        id: splashTimer
        interval: 3000 // Show splash screen for 3 seconds
        running: true
        repeat: false

        onTriggered: {
            splash.visible = false

            mainWindow.x = Screen.width - mainWindow.width
            mainWindow.y = 0

            logobutton.visible = true

        }
    }

    Rectangle {
        id: logobutton
        border.color: "black"
        color: "grey"
        height: 100
        radius: 10
        width: 200
        anchors.top: parent.top
        anchors.right: parent.right

        opacity: 0
        Behavior on opacity {
            OpacityAnimator {
                duration: 2000 // Duration of fade-in effect
                from: 0
                to: 1
            }
        }

        Text {
            anchors.centerIn: parent
            color: "white"
            text: "Logo PlaceHolder"
        }
        MouseArea {
            anchors.fill: parent
            acceptedButtons: Qt.LeftButton | Qt.RightButton
            property point dragStartPosition

            onPressed: {
                if (mouse.button === Qt.RightButton) { // 'mouse' is a MouseEvent argument passed into the onClicked signal handler
                    overlayMenu.popup()
                } else if (mouse.button === Qt.LeftButton) {
                    dragStartPosition = Qt.point(mouse.x, mouse.y)


                }
            }


            onPositionChanged: function (mouse) {
                if (mouse.buttons & Qt.LeftButton) { // Check if the left mouse button is still pressed
                    var dx = mouse.x - dragStartPosition.x
                    var dy = mouse.y - dragStartPosition.y
                    mainWindow.x += dx
                    mainWindow.y += dy
                }
            }
        }
        // Menu {
        //     id: overlayMenu
        //
        //     title: "Overlay Options"
        //
        //     MenuItem {
        //         text: "Default"
        //
        //         onTriggered: console.log("Option 1 selected")
        //     }
        //     MenuItem {
        //         text: "Debug"
        //
        //         onTriggered: console.log("Option 2 selected")
        //     }
        // }
    }
}